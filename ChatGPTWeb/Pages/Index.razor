@page "/"
@using Radzen;
@using Radzen.Blazor;

<PageTitle>fetchdata</PageTitle>
<h1 align="center">Convert transcript of any meet to <abbr title="Minutes of Meeting">MOM</abbr></h1>

<br />
<div>
    <span><h3>Let the engine know as what you expect : </h3></span>
    <input class="form-control" type="text"
       @bind="promptHeader" />
</div>
<br />
<div>
    <h3>Transcript:</h3>
    <InputFile OnChange="@OnInputFile" />
    @if (!string.IsNullOrEmpty(PlainText))
    {
        @*<pre>@PlainText</pre>*@
        <input class="form-control" type="text" @bind="PlainText" />

    }
    else
    {
        <p>No plain text available.</p>
    }
</div>

<br />

<RadzenButton Text="Generate Minutes of Meeting" Click="@CallService" />

<br />
<br />
<div>Response:</div>
<br />
<p>@((MarkupString)response)</p>

